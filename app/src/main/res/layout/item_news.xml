<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_news_container"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    app:cardCornerRadius="1dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:padding="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_item_news_icon"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/tv_item_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tilte"
                android:textSize="18sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/tv_item_news_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"/>

                <TextView
                    android:id="@+id/tv_item_news_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Tilte"/>
            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_item_news_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/pikachu"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>

